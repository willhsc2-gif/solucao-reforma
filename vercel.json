{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "vite",
  "build": {
    "env": {
      "VITE_SUPABASE_URL": "@vite_supabase_url",
      "VITE_SUPABASE_ANON_KEY": "@vite_supabase_anon_key"
    }
  },
  "cleanUrls": true,
  "trailingSlash": false,
  "routes": [
    // Regra específica para o index.html para garantir no-cache e Content-Type correto
    {
      "src": "/index.html",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate",
        "Content-Type": "text/html"
      },
      "dest": "/index.html"
    },
    // Regras para assets gerados pelo Vite (JS, CSS com hashes)
    {
      "src": "/assets/(.*\\.js)",
      "headers": {
        "Content-Type": "application/javascript",
        "Cache-Control": "public, max-age=31536000, immutable"
      },
      "dest": "/assets/$1"
    },
    {
      "src": "/assets/(.*\\.css)",
      "headers": {
        "Content-Type": "text/css",
        "Cache-Control": "public, max-age=31536000, immutable"
      },
      "dest": "/assets/$1"
    },
    // Regra genérica para outros assets na pasta /assets (imagens, fontes, etc.)
    {
      "src": "/assets/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      },
      "dest": "/assets/$1"
    },
    // Regra para ícones PNG com cache revalidável
    {
      "src": "/icons/(.*\\.png)",
      "headers": {
        "Content-Type": "image/png",
        "Cache-Control": "public, max-age=3600, must-revalidate"
      },
      "dest": "/icons/$1"
    },
    // Regra para favicon.png
    {
      "src": "/favicon.png",
      "headers": {
        "Content-Type": "image/png",
        "Cache-Control": "public, max-age=3600, must-revalidate"
      },
      "dest": "/favicon.png"
    },
    // Regra para manifest.json, sempre revalidar
    {
      "src": "/manifest.json",
      "headers": {
        "Content-Type": "application/manifest+json",
        "Cache-Control": "public, max-age=0, must-revalidate"
      },
      "dest": "/manifest.json"
    },
    // Regra para service-worker.js, sempre revalidar
    {
      "src": "/service-worker.js",
      "headers": {
        "Content-Type": "application/javascript",
        "Cache-Control": "public, max-age=0, must-revalidate"
      },
      "dest": "/service-worker.js"
    },
    // Outros arquivos estáticos na raiz
    {
      "src": "/robots.txt",
      "dest": "/robots.txt"
    },
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    // Fallback para todas as outras rotas para index.html (roteamento SPA)
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}